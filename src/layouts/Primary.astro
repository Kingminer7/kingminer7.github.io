---
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="flash-layer"/>
		<script>
			document.addEventListener("DOMContentLoaded", () => {
				var flash = document.getElementById("flash-layer")

				function doFlash() {
					console.log("Flash");
					if (!flash) return;
					console.log("Yes");
					var time = Math.random() * 5 + 7
					var scale = .6 + Math.random() * 2;
					flash.style.width = 60 * scale + "vb";
					flash.style.height = 60 * scale + "vb";
					flash.style.left = -10 + Math.random() * 80 + "vw";
					flash.style.top = -30 + Math.random() * 80 + "vh";
					flash.style.animationDuration = time + "s";
					flash.classList.add("doFlash")
					setTimeout(() => {
						flash?.classList.remove("doFlash");
						setTimeout(doFlash, 10000)
					}, time * 2000);
				}
				doFlash();
			})
		</script>
		<slot/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #0f0b1d;
	}
	@keyframes flash {
		0%:  {scale: 0%;    opacity: 0;   }
		80%: {scale: 70%;   opacity: 20%; }
		100% {scale: 100%;  opacity: 100%;}
	}
	#flash-layer {
		position: fixed;
		inset: 0;
		pointer-events: none;
		overflow: hidden;
		width: 60vmin;
		height: 60vmin;
		opacity: 0;
		scale: 0;
		background:radial-gradient(
			circle,
			rgba(255, 255, 255, 0.18) 0%,
			rgba(255, 255, 255, 0.11) 20%,
			rgba(255, 255, 255, 0.03) 50%,
			rgba(255, 255, 255, 0.00) 70%
		);
	}
	.doFlash {
		animation-name: flash;
		animation-iteration-count: 2;
		animation-direction: alternate;
	}
</style>